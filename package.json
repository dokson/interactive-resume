{
    "name": "interactive-resume",
    "version": "2.0.0",
    "description": "My 2019's interactive CV, based on Robby Leonardi's interactive Resume",
    
    "scripts": {
        "deploy": "node src/build/deploy.js",
        "deploy:minify": "node src/build/minify.js",
        "deploy:generate-manifest": "node src/build/generate-manifest.js",
        "start": "npm run deploy"
    },
    "keywords": [
        "interactive",
        "resume",
        "cv",
        "business",
        "portfolio",
        "web"
    ],
    "author": "Alessandro Colace",
    "license": "UNLICENSED",
    "config": {
        "personal": {
            "name": "Alessandro Colace",
            "shortName": "A. Colace",
            "title": "Cloud Data Consultant",
            "description": "Interactive resume of Alessandro Colace - Cloud Data Consultant"
        },
        "manifest": {
            "themeColor": "#5bbad5",
            "backgroundColor": "#ffffff",
            "display": "standalone",
            "orientation": "portrait-primary",
            "startUrl": "/",
            "scope": "/",
            "lang": "en",
            "icons": [
                {
                    "src": "image/icons/favicon-16x16.png",
                    "sizes": "16x16",
                    "type": "image/png",
                    "purpose": "any"
                },
                {
                    "src": "image/icons/favicon-32x32.png",
                    "sizes": "32x32",
                    "type": "image/png",
                    "purpose": "any"
                },
                {
                    "src": "image/icons/android-chrome-192x192.png",
                    "sizes": "192x192",
                    "type": "image/png",
                    "purpose": "any maskable"
                },
                {
                    "src": "image/icons/android-chrome-512x512.png",
                    "sizes": "512x512",
                    "type": "image/png",
                    "purpose": "any maskable"
                },
                {
                    "src": "image/icons/apple-touch-icon.png",
                    "sizes": "180x180",
                    "type": "image/png",
                    "purpose": "any"
                }
            ]
        }
    },
    "devDependencies": {
        "uglify-js": "^3.19.3",
        "clean-css": "^5.3.3"
    }
}